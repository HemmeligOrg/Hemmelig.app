{
  "name": "hemmelig-app",
  "version": "7.0.0",
  "description": "Prisma CRUD API using Hono",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc server.ts && bunx --bun vite build",
    "start": "bunx prisma migrate deploy && bun dist/app.js",
    "dev:api": "bunx prisma migrate dev && bun run server.ts",
    "dev:client": "bunx --bun vite",
    "dev": "bun run dev:client",
    "migrate:dev": "bunx prisma migrate dev",
    "migrate:deploy": "bunx prisma migrate deploy",
    "migrate:reset": "bunx prisma migrate reset",
    "migrate:status": "bunx prisma migrate status",
    "deploy": "bun run build && bun run migrate:deploy && bun run start",
    "test": "hurl api/tests"
  },
  "keywords": [
    "hono",
    "prisma",
    "api",
    "crud",
    "rest"
  ],
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/vite-dev-server": "^0.19.1",
    "@hono/zod-validator": "^0.5.0",
    "@prisma/client": "^6.8.2",
    "@tabler/icons-react": "^3.34.0",
    "@tiptap/extension-character-count": "^2.22.3",
    "@tiptap/extension-color": "^2.22.3",
    "@tiptap/extension-link": "^2.22.3",
    "@tiptap/extension-list-item": "^2.22.3",
    "@tiptap/extension-text-style": "^2.22.3",
    "@tiptap/react": "^2.22.3",
    "@tiptap/starter-kit": "^2.22.3",
    "@types/dlv": "^1.1.5",
    "@types/qrcode.react": "^3.0.0",
    "@types/validator": "^13.15.2",
    "better-auth": "^1.2.10",
    "better-sqlite3": "^12.0.0",
    "clsx": "^2.1.0",
    "croner": "^9.1.0",
    "generate-password-browser": "^1.1.0",
    "hono": "^4.7.9",
    "i18next": "^25.2.1",
    "ip-address": "^10.0.1",
    "ip-range-check": "^0.2.0",
    "is-cidr": "^5.1.1",
    "js-md5": "^0.8.3",
    "lucide-react": "^0.523.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^6.8.2",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^6.20.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "validator": "^13.15.15",
    "zod": "^3.24.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "^1.2.13",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
